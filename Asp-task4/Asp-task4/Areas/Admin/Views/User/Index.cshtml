@using Asp_task4.Areas.Admin.Models.User
@model UserIndexVM
<!-- Page Heading -->
<div class="page-header">
    <h1 class="page-title">Users</h1>
    <a class="btn-create" asp-action="create" asp-controller="user">+ Create User</a>
</div>

<table class="styled-table">
    <thead>
        <tr>
            <th scope="col">Email</th>
            <th scope="col">Country</th>
            <th scope="col">City</th>
            <th scope="col">Phone Number</th>
            <th scope="col">Roles</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.Country</td>
                <td>@user.City</td>
                <td>@user.PhoneNumber</td>
                <td>
                    @foreach (var role in user.Roles)
                    {
                        <span class="role-tag">@role</span>
                    }
                </td>
                <td>
                    <a class="btn-action btn-update" asp-action="update" asp-controller="user" asp-route-id="@user.Id">Update</a>
                    <form method="post" asp-action="delete" asp-controller="user" asp-route-id="@user.Id" class="inline-form">
                        <button type="submit" class="btn-action btn-delete">Delete</button>
                    </form>
                    <a class="btn-action btn-details" asp-action="details" asp-controller="user" asp-route-id="@user.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>