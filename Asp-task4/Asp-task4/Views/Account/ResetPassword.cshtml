@using Asp_task4.ViewModels.Account
@model AccountResetPasswordVM

@{
    Layout = "_Layout";
    string email = Context.Request.Query["email"];
    string token = Context.Request.Query["token"];
}

<form method="post" asp-action="resetPassword" asp-controller="Account" class="login100-form validate-form">
    <span class="login100-form-title">
        Reset Password
    </span>
    <div asp-validation-summary="All"></div>
    <input value="@email" type="hidden" asp-for="Email"/>
    <input value="@token" type="hidden" asp-for="Token" />


    <div class="wrap-input100 validate-input">
        <input asp-for="Password" class="input100" placeholder="Email" type="email">
        <span asp-validation-for="Password"></span>
        <span class="focus-input100"></span>
    </div>
    <div class="wrap-input100 validate-input">
        <input asp-for="ConfirmPassword" class="input100" placeholder="Email" type="email">
        <span asp-validation-for="ConfirmPassword"></span>
        <span class="focus-input100"></span>
    </div>

    <div class="container-login100-form-btn">
        <button class="login100-form-btn">
            Confirm
        </button>
    </div>

    <div class="text-center p-t-136">
        <a asp-action="Login" asp-controller="Account" class="txt2">
            Back to Login
            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
        </a>
    </div>
</form>
